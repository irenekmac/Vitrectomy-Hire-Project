<!DOCTYPE html>
<html>
  <head>
    <title>Vitrectomy Hire</title>
    <link href="https://fonts.googleapis.com/css?family=Noto+Sans&display=swap" rel="stylesheet">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>

    <nav class="navbar navbar-light" style="background-color: #e3f2fd;">
      <!-- h1 -->
      <a class="navbar-brand" href=<%=root_path%> >Vitrectomy Hire</a>

      <div cclass="nav-link">

      <% if @current_user.present? %>
        Welcome, <%= @current_user.name %>


        <% if @current_user.admin? %>
        (admin)

        <%= link_to 'Users', users_path %>

        <%= link_to 'Orders', orders_path %>

        <% end %>

        <% if @current_user.technician? %>
          (technician)
        <div class="btn btn-info">
          <%= link_to 'Orders', orders_path %>
        </div>

        <% end %>

        <% if @current_user.patient? %>
        (patient)

        <div class="btn btn-info">
          <%= link_to 'Order Info', orders_path %>
        </div>

        <div class="btn btn-info">
          <%= link_to 'Create Order', new_order_path %>
        </div>

        <% end %>

        <div class="btn btn-info">
          <%= link_to 'Logout', login_path, method: 'delete' %>
        </div>

      <% else %>

      <div class="btn btn-info">
        <%= link_to 'Login', login_path %>
      </div>


      <% end %>

      </div>
    </nav>



    <%= yield %>
    <!-- <div class="footerContainer">

    <footer class="footer">

      &copy; IrenekMac Productions, 2020
    </footer>
  </div> -->

  <footer class="card-footer text-center" >
      Made With ‚ù§ by <a href="https://github.com/irenekmac">Irene Mac</a>
    </footer>

  </body>
</html>
