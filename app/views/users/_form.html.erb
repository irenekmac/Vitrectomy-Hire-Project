<%= form_for @user do |f| %>

<%= f.label :user_type %>
<br>
<%= f.select :user_type, User.user_types.keys.to_a %>
<br>

<%= f.label :name %>
<br>
<%= f.text_field :name %>
<br>

<%= f.label :date_of_birth %>
<br>
<%= f.text_field :dob %> (yyyy/mm/dd)
<br>

<%= f.label :contact_number %>
<br>
<%= f.text_field :contact %>
<br>

<%= f.label :email %>
<br>
<%= f.text_field :email %>
<br>

<%= f.label :password %>
<br>
<%= f.password_field :password %>
<br>

<%= f.label :password_confirmation %>
<br>
<%= f.password_field :password_confirmation %>
<br>

<%= f.label :height %>
<br>
<%= f.text_field :height %> (cm)
<br>

<%= f.label :weight %>
<br>
<%= f.text_field :weight %> (kg)
<br>

<%= f.label :address %>
<br>
<%= f.text_field :address %>
<br>

<%= f.label :state %>
<br>
<%= f.select :state, User.states.keys.to_a %>
<br>

<%= f.label :card_payment %>
<br>
<%= f.text_field :card_payment %>
<br>

<%= f.submit 'Submit' %>

<% end %>
